<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="employee_table" resource="default" engine="innodb"
           comment="Employee Table">
        <column xsi:type="int" name="employee_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Employee ID"/>
        <column xsi:type="varchar" name="first_name" nullable="false" length="30"
                comment="First Name"/>
        <column xsi:type="varchar" name="last_name" nullable="false" length="30"
                comment="Last Name"/>
        <column xsi:type="varchar" name="email_id" nullable="false" length="30"
                comment="Email Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="employee_id"/>
        </constraint>
    </table>
</schema>
